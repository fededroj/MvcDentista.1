@model MvcDentista.Models.ApellidoPacienteViewModel

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista de Pacientes</h1>

<p>
    <a asp-action="Create">Crear nuevo registro</a>
</p>


<form asp-controller="Pacientes" asp-action="Index" method="get">
    <p>
        <select asp-for="ApellidoPaciente" asp-items="Model.Apellido">
            <option value="">Todos</option>
        </select>
        Nombre: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filtro" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes[0].FechaAsistencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes[0].Domicilio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes[0].Localidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes[0].Profesion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes[0].Edad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pacientes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAsistencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domicilio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                <a asp-action="Diente" asp-route-id="@item.Id">Dientes</a>
            </td>
        </tr>
}
    </tbody>
</table>
